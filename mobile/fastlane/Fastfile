default_platform(:ios)

platform :ios do
  before_all do
    setup_circle_ci
  end
  lane :beta do
    get_certificates(
        username: "services@castle.games"
    )
    get_provisioning_profile(
        username: "services@castle.games"
    )
    build_app(
      scheme: "Castle",
      workspace: "ios/Castle.xcworkspace"
    )
    upload_to_testflight(
        username: "services@castle.games"
    )
  end
end
